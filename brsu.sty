\mode<presentation>{
	\useinnertheme{circles}
	\useoutertheme{shadow}

	\definecolor{brsugrey}{rgb}{0.9, 0.9, 0.9}
	\usecolortheme[rgb={0, 0.594, 0.949}]{structure}

	\setbeamercolor{palette primary}{use=structure, fg=structure.fg, bg=brsugrey}
	\setbeamercolor{palette secondary}{bg=brsugrey}
	\setbeamercolor{palette tertiary}{bg=brsugrey}
	\setbeamercolor{palette quaternary}{bg=brsugrey}
	\setbeamercolor{blackongrey}{bg=brsugrey,fg=black}
	\setbeamercolor{blueongrey}{bg=brsugrey,fg=structure.fg}
	\setbeamercovered{highly dynamic}
	\setbeamertemplate{blocks}[rounded][shadow=true]
	\setbeamercolor{block title}{use=structure, fg=white, bg=structure.fg}
	\setbeamercolor{block title alerted}{use=alerted text, fg=white, bg=alerted text.fg!75!black}
	\setbeamercolor{block title example}{parent=block title, use=block title, bg=block title.bg!60!bg}
	\setbeamercolor{block body}{parent=normal text, use=block title, bg=block title.bg!10!bg}
	\setbeamercolor{block body alerted}{parent=normal text, use=block title alerted, bg=block title alerted.bg!10!bg}
	\setbeamercolor{block body example}{parent=normal text, use=block title example, bg=block title example.bg!10!bg}
	
	\defbeamertemplate*{sidebar right}{brsu theme}{}
	\addtobeamertemplate{headline}{}{%
	   \ifx\insertframetitle\@empty%
	       \vspace{0.3cm}\hspace{0.3cm}%\insertlogo%
	   \fi}
	
	\addtobeamertemplate{frametitle}{}{ %
	    \ifx\insertframetitle\@empty %
	        \strut\par %
	    \else %
	        \vbox to 1.438cm {%
                \leftskip=-\beamer@leftmargin%
                \rightskip=-\beamer@rightmargin%
                {\vspace{0.3cm}\hspace{0.3cm}\par}%\insertlogo\par}%
                \vbox{}
        }%
	   \fi}
}


\newcommand{\titledsubsection}{\@ifstar{\titledsubsections}{\titledsubsectionns}}
\newcommand{\titledsubsections}[1]{\subsection*{#1} \titledsubsectionslide}
\newcommand{\titledsubsectionns}[1]{\subsection{#1} \titledsubsectionslide}
\newcommand{\titledsubsectionslide}{
    \begin{frame}{\insertsubsection}
        \begin{center}
            \structure{
                \Large \insertsection \\
                \large \insertsubsection}
        \end{center}
    \end{frame}
}

\newcommand{\titledsection}{\@ifstar{\titledsections}{\titledsectionns}}
\newcommand{\titledsections}[1]{\section*{#1} \titledsectionslide}
\newcommand{\titledsectionns}[1]{\section{#1} \titledsectionslide}
\newcommand{\titledsectionslide}{
    \begin{frame}{\insertsection}
        \begin{center}
            \structure{\Large \insertsection}
        \end{center}
    \end{frame}
}

